<launch>
  <arg name="robot_model" />
  <arg name="param_file" default="$(find-pkg-share ypspur_ros2_bridge)/config/$(var robot_model)/ypspur_ros2_bridge_param.yaml" />

  <node pkg="ypspur_ros2_bridge" exec="ypspur_ros2_bridge" name="ypspur_ros2_bridge" output="screen">
    <param from="$(var param_file)" />
    <remap from="cmd_vel" to="/cmd_vel" />
  </node>

</launch>